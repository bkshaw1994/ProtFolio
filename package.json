{
  "name": "mern-portfolio",
  "version": "1.0.0",
  "description": "MERN Stack Portfolio for 9 Years Experience Developer",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server": "cd server && node index.js",
    "server:dev": "cd server && nodemon index.js",
    "client": "cd client && SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "client:build": "cd client && SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "vercel-build": "cd client && npm install && SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "build": "npm run build:prod",
    "build:dev": "npm run client:build",
    "build:prod": "npm run pre-build && npm run build:all",
    "build:all": "npm run client:build:prod && npm run server:build",
    "build:validate": "npm run lint:all && npm run test:all:coverage",
    "pre-build": "npm run lint:all:check && npm run test:all:coverage:check",
    "start": "npm run server",
    "test": "jest",
    "test:all": "npm run test:client && npm run test:server",
    "test:all:coverage": "npm run test:client:coverage && npm run test:server:coverage",
    "test:all:coverage:check": "npm run test:client:coverage:check && npm run test:server:coverage:check",
    "test:client": "cd client && npm test",
    "test:client:coverage": "cd client && npm run test:coverage",
    "test:client:coverage:check": "cd client && npm run test:coverage:check",
    "test:server": "cd server && npm test",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:server:coverage:check": "cd server && npm run test:coverage:check",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:ci": "npm run lint:all:check && npm run test:all:ci && npm run build:all",
    "test:all:ci": "npm run test:client:ci && npm run test:server:ci",
    "test:client:ci": "cd client && npm run test:ci",
    "test:server:ci": "cd server && npm run test:ci",
    "client:build:prod": "cd client && npm run build:prod",
    "server:build": "cd server && npm run build",
    "lint:all": "npm run lint:client && npm run lint:server",
    "lint:all:check": "npm run lint:client:check && npm run lint:server:check",
    "lint:client": "cd client && npm run lint",
    "lint:client:check": "cd client && npm run lint:check",
    "lint:server": "cd server && npm run lint",
    "lint:server:check": "cd server && npm run lint:check",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "upload-data": "node scripts/uploadData.js"
  },
  "keywords": [
    "mern",
    "portfolio",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Bishal Kumar Shaw",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "framer-motion": "^10.16.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.276.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "jest": "^27.5.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

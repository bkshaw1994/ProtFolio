{
  "name": "portfolio-server",
  "version": "1.0.0",
  "description": "Express server for MERN portfolio",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npm run build:validate",
    "build:dev": "echo 'Server build for development - no build step needed'",
    "build:prod": "npm run pre-build && echo 'Server ready for production'",
    "build:validate": "npm run lint:check && npm run test:coverage:check",
    "pre-build": "npm run lint:check && npm run test:coverage:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings=0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "keywords": ["express", "mongodb", "portfolio", "api"],
  "author": "Your Name",
  "license": "MIT"
}
